{	
	"random_seed": 13370,
	"pytorch_seed": 1337,
	"numpy_seed": 42,
	"datasets_for_vocab_creation": [],
	"dataset_reader": {
		"type": "bertnli",
		"lazy": false,
		"pretrained_model": "bert-base-uncased",
		"shuffle": true,
	},
	"train_data_path": "data/mnli/train.jsonl" ,
	"validation_data_path": "data/mnli/dev.jsonl" ,
	"model": {
		"type": "bertnli",
		"pretrained_model": "bert-base-uncased",
		"linear_layer": {
			"input_dim": 768,
			"num_layers": 1,
			"hidden_dims": 3,
			"activations": ["linear"],
		},
	},
	"iterator": {
		"type": "basic",
		"batch_size" : 32,
	},
	"trainer": {
		"type": "apextrainer",
		"cuda_device": 0,
		"num_epochs": 3,
		"accumulation_steps": 16,
		"half_precision": true,
		"opt_level": "O2", 
		"num_serialized_models_to_keep": 0,
		// "grad_clipping": 1.0,
		"validation_metric": "+accuracy",
		"optimizer": {
			"type": "adam",
			"lr": 2e-5,
			"weight_decay": 0.01,
            "parameter_groups": [
              [["bias", "LayerNorm.bias", "LayerNorm.weight", "layer_norm.weight"], {"weight_decay": 0.0}],
            ],
		},
		"warmup_proportion": 0.1,
	},
}