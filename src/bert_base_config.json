{	
	"random_seed": 42,
	"pytorch_seed": 42,
	"numpy_seed": 42,
	"train_data_path": "data/mnli/train.jsonl" ,
	"validation_data_path": "data/mnli/dev.jsonl" ,
	"datasets_for_vocab_creation": [],
	"dataset_reader": {
		"type": "bertnli",
		"lazy": false,
		"pretrained_model": "bert-base-uncased",
	},
	"model": {
		"type": "bertnli",
		"pretrained_model": "bert-base-uncased",
		"linear_layer": {
			"input_dim": 768,
			"num_layers": 1,
			"hidden_dims": 3,
			"activations": ["linear"],
		},
	},
	"iterator": {
		"type": "basic",
		"batch_size" : [32],
	},
	"trainer": {
		"type": "apextrainer",
		"cuda_device": 0,
		"num_epochs": [4],
		"accumulation_steps": 12,
		"half_precision": true,
		"opt_level": "O1", 
		"num_serialized_models_to_keep": 0,
		"validation_metric": "+accuracy",
		"warmup_proportion": 0.1,
		"optimizer": {
			"type": "bert_adam",
			"lr": [1e-5],
			"weight_decay": [0, 0.01],
			"parameter_groups": [
			  [["bias", "LayerNorm.bias", "LayerNorm.weight"], {"weight_decay": 0.0}],
			],
		},
	},
}