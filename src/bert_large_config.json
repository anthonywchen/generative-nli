{	
	"random_seed": 13370,
	"pytorch_seed": 1337,
	"numpy_seed": 42,
	"datasets_for_vocab_creation": [],
	"dataset_reader": {
		"type": "bertnli",
		"lazy": true,
		"pretrained_model": "roberta-large",
	},
	"train_data_path": "data/mnli/train.jsonl" ,
	"validation_data_path": "data/mnli/dev.jsonl" ,
	"model": {
		"type": "bertnli",
		"pretrained_model": "roberta-large",
		"linear_layer": {
			"input_dim": 1024,
			"num_layers": 1,
			"hidden_dims": 3,
			"activations": ["linear"],
		},
	},
	"iterator": {
		"type": "basic",
		"batch_size" : 32,
		"max_instances_in_memory": 10000, 
	},
	"trainer": {
		"type": "apextrainer",
		"cuda_device": 0,
		"num_epochs": 4,
		"accumulation_steps": 8,
		"half_precision": true,
		"opt_level": "O2", 
		"num_serialized_models_to_keep": 0,
		"optimizer": {
			"type": "adam",
			"lr": 1e-5,
		},
	},
}