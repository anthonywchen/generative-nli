{	
	"random_seed": 42,
	"pytorch_seed": 42,
	"numpy_seed": 42,
	"train_data_path": "data/mnli/train.jsonl" ,
	"validation_data_path": "data/mnli/dev.jsonl" ,
	"datasets_for_vocab_creation": [],
	"dataset_reader": {
		"type": "bertnli",
		"pretrained_model": "bert-large-uncased",
		"max_seq_length": 128,
		"percent_data": 0.001,
	},
	"validation_dataset_reader": {
		"type": "bertnli",
		"pretrained_model": "bert-large-uncased",
		"max_seq_length": 128,
	},
	"model": {
		"type": "bertnli",
		"pretrained_model": "bert-large-uncased",
		"linear_layer": {
			"input_dim": 1024,
			"num_layers": 1,
			"hidden_dims": 3,
			"activations": ["linear"],
		},
	},
	"iterator": {
		"type": "basic",
		"batch_size" : 32,
	},
	"trainer": {
		"type": "apextrainer",
		"cuda_device": 0,
		"num_epochs": [3, 5, 10, 15], 
		"half_precision": true,
		"opt_level": "O2", 
		"num_serialized_models_to_keep": 0,
		"validation_metric": "+accuracy",
		"warmup_proportion": [0, 0.1],
		"optimizer": {
			"type": "bert_adam",
			"lr": [1e-5, 2e-5],
			"weight_decay": [0.01, 0.02],
			"parameter_groups": [
			  [["bias", "LayerNorm.bias", "LayerNorm.weight"], {"weight_decay": 0.0}],
			],
		},
	},
}