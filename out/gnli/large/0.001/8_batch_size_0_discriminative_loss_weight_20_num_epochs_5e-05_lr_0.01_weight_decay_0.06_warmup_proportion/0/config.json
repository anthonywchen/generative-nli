{
    "dataset_reader": {
        "type": "gnli",
        "max_hypothesis_length": 80,
        "max_premise_length": 128,
        "percent_data": 0.001,
        "pretrained_model": "roberta-large"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 8
    },
    "model": {
        "type": "gnli",
        "discriminative_loss_weight": 0,
        "pretrained_model": "bart.large"
    },
    "train_data_path": "data/mnli/train.jsonl",
    "validation_data_path": "data/mnli/dev.jsonl",
    "trainer": {
        "type": "apextrainer",
        "cuda_device": 0,
        "half_precision": true,
        "num_epochs": 20,
        "num_serialized_models_to_keep": 0,
        "opt_level": "O2",
        "optimizer": {
            "type": "adamw",
            "betas": [
                0.9,
                0.98
            ],
            "lr": 5e-05,
            "parameter_groups": [
                [
                    [
                        "bias",
                        "LayerNorm.bias",
                        "LayerNorm.weight"
                    ],
                    {
                        "weight_decay": 0
                    }
                ]
            ],
            "weight_decay": 0.01
        },
        "validation_metric": "+accuracy",
        "warmup_proportion": 0.06
    },
    "datasets_for_vocab_creation": [],
    "validation_dataset_reader": {
        "type": "gnli",
        "max_hypothesis_length": 80,
        "max_premise_length": 128,
        "percent_data": 0.1,
        "pretrained_model": "roberta-large"
    }
}