{
    "dataset_reader": {
        "type": "bertnli",
        "lazy": false,
        "max_seq_length": 128,
        "pretrained_model": "roberta-large"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "model": {
        "type": "bertnli",
        "linear_layer": {
            "activations": [
                "linear"
            ],
            "hidden_dims": 3,
            "input_dim": 1024,
            "num_layers": 1
        },
        "pretrained_model": "roberta-large"
    },
    "train_data_path": "data/mnli/train.jsonl",
    "validation_data_path": "data/mnli/dev.jsonl",
    "trainer": {
        "type": "apextrainer",
        "cuda_device": 0,
        "half_precision": true,
        "num_epochs": 3,
        "num_serialized_models_to_keep": 0,
        "opt_level": "O2",
        "optimizer": {
            "type": "adamw",
            "betas": [
                0.9,
                0.98
            ],
            "lr": 3e-06,
            "parameter_groups": [
                [
                    [
                        "bias",
                        "LayerNorm.bias",
                        "LayerNorm.weight"
                    ],
                    {
                        "weight_decay": 0
                    }
                ]
            ],
            "weight_decay": 0.01
        },
        "validation_metric": "+accuracy",
        "warmup_proportion": 0.06
    },
    "datasets_for_vocab_creation": [],
    "validation_dataset_reader": {
        "type": "bertnli",
        "lazy": false,
        "max_seq_length": 128,
        "pretrained_model": "roberta-large"
    }
}